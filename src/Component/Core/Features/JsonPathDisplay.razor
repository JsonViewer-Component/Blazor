@using Component.Models
@using Microsoft.JSInterop
@using Component.Core.Shared
@using System.Threading
@inject IJSRuntime JSRuntime
@implements IDisposable

@* JSON Path Display Modal Component *@

@if (PathInfo != null && PathInfo.IsSelected)
{
    <div class="path-modal-overlay" @onclick="HandleOverlayClick">
        <div class="path-modal-container @(IsDarkTheme ? "dark-theme" : "")" @onclick:stopPropagation="true">

            @* Header *@
            <div class="path-modal-header">
                <div class="path-modal-title">
                    <Icon Name="link-45deg" Size="20" />
                    <span>JSON Path</span>
                </div>
                <button class="path-modal-close" @onclick="HandleClose" title="Close (ESC)">
                    <Icon Name="x-lg" Size="20" />
                </button>
            </div>

            @* Content *@
            <div class="path-modal-content">
                <div class="path-info-grid">
                    @* Path *@
                    <div class="path-info-card">
                        <div class="path-info-icon icon-path">
                            <Icon Name="diagram-3" Size="24" />
                        </div>
                        <div class="path-info-details">
                            <div class="path-info-label">Path</div>
                            <code class="path-info-value path-value-text">@PathInfo.Path</code>
                        </div>
                    </div>

                    @* Property Name *@
                    <div class="path-info-card">
                        <div class="path-info-icon icon-property">
                            <Icon Name="tag" Size="24" />
                        </div>
                        <div class="path-info-details">
                            <div class="path-info-label">Property</div>
                            <div class="path-info-value property-name-text">@PathInfo.PropertyName</div>
                        </div>
                    </div>

                    @* Type *@
                    <div class="path-info-card">
                        <div class="path-info-icon icon-type">
                            <Icon Name="code-square" Size="24" />
                        </div>
                        <div class="path-info-details">
                            <div class="path-info-label">Type</div>
                            <span class="path-info-value property-type-badge type-@PathInfo.PropertyType.ToLower()">
                                @PathInfo.PropertyType
                            </span>
                        </div>
                    </div>

                    @* Value *@
                    @if (!string.IsNullOrEmpty(PathInfo.PropertyValue))
                    {
                        <div class="path-info-card path-info-card-full">
                            <div class="path-info-icon icon-value">
                                <Icon Name="file-earmark-text" Size="24" />
                            </div>
                            <div class="path-info-details">
                                <div class="path-info-label">Value</div>
                                <code class="path-info-value property-value-text">@TruncateValue(PathInfo.PropertyValue)</code>
                            </div>
                        </div>
                    }
                </div>
            </div>

            @* Footer *@
            <div class="path-modal-footer">
                <button class="btn btn-sm btn-primary" @onclick="CopyPath" title="Copy JSON Path">
                    <Icon Name="clipboard" Size="14" />
                    <span class="ms-1">@(isCopied ? "Copied!" : "Copy Path")</span>
                </button>
                <button class="btn btn-sm btn-secondary" @onclick="HandleClose">
                    Close
                </button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public JsonPathInfo? PathInfo { get; set; }

    [Parameter]
    public bool IsDarkTheme { get; set; }

    [Parameter]
    public EventCallback OnClose { get; set; }

    [Parameter]
    public EventCallback<string> OnCopyPath { get; set; }

    private bool isCopied = false;
    private DotNetObjectReference<JsonPathDisplay>? dotNetHelper;
    private CancellationTokenSource? copyCancellationTokenSource;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            dotNetHelper = DotNetObjectReference.Create(this);
            await RegisterKeyboardShortcuts();
        }
    }

    private async Task RegisterKeyboardShortcuts()
    {
        await JSRuntime.InvokeVoidAsync("eval", @"
            (function() {
                if (!window.pathModalKeyHandlerRegistered) {
                    document.addEventListener('keydown', function(e) {
                        if (e.key === 'Escape') {
                            const modal = document.querySelector('.path-modal-overlay');
                            if (modal) {
                                const closeBtn = modal.querySelector('.path-modal-close');
                                if (closeBtn) {
                                    closeBtn.click();
                                }
                            }
                        }
                    });
                    window.pathModalKeyHandlerRegistered = true;
                }
            })();
        ");
    }

    private async Task HandleClose()
    {
        await OnClose.InvokeAsync();
    }

    private void HandleOverlayClick()
    {
        _ = HandleClose();
    }

    private async Task CopyPath()
    {
        if (PathInfo == null) return;

        // Cancel any existing copy operation
        copyCancellationTokenSource?.Cancel();
        copyCancellationTokenSource?.Dispose();
        copyCancellationTokenSource = new CancellationTokenSource();

        await OnCopyPath.InvokeAsync(PathInfo.Path);
        isCopied = true;
        StateHasChanged();

        try
        {
            await Task.Delay(2000, copyCancellationTokenSource.Token);
            isCopied = false;
            StateHasChanged();
        }
        catch (OperationCanceledException)
        {
            // Operation was cancelled, ignore
        }
    }

    private string TruncateValue(string value, int maxLength = 200)
    {
        if (string.IsNullOrEmpty(value)) return value;

        if (value.Length <= maxLength)
            return value;

        // Use modern string slicing (more efficient)
        return string.Concat(value.AsSpan(0, maxLength), "...");
    }

    public void Dispose()
    {
        copyCancellationTokenSource?.Cancel();
        copyCancellationTokenSource?.Dispose();
        dotNetHelper?.Dispose();
    }
}

